
<PlaceholderTextInput@TextInput>:
    placeholder_text: ""

    hint_text: self.placeholder_text if not self.focus else ''
    foreground_color: (0, 0, 0, 1) if self.focus else (0.5, 0.5, 0.5, 1)

<HomeScreen>:
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: 0.7, 0.9, 1, 1  # Define a cor de fundo (neste caso, um cinza claro)
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "To Do List"
            size_hint_y: 0.5
            padding: 10
            font_size: 18
            color: 0, 0.62, 0.96
        Button:
            text: 'Add new task'
            on_press: root.manager.current = 'addTask'
            size_hint_y: None
            height: 50
        ScrollView:
            BoxLayout:
                id: tasks
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height 
                


<addTaskScreen>:
    BoxLayout:
        orientation: 'vertical'
        PlaceholderTextInput:
            placeholder_text: "Title..."
            size_hint_y: None
            height: 300
        PlaceholderTextInput:
            placeholder_text: "Type here..."
        Button:
            text: 'Back to Home Screen'
            on_press: root.manager.current = 'home'